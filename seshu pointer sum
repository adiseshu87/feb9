#include <stdio.h>

int main()
{
    int a[4],i,sum=0;
    printf("enter values");
    for(i=0;i<4;i++)
    scanf("%d",&a[i]);
    int *p=a;
    for(i=0;i<4;i++)
    {
        sum=sum+*(p+i);
    }
    printf("sum is is %d\n",sum);
   
    
}
